
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .form-container {
        max-width: 400px;
        background-color: #ffffff;
        padding: 2rem;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    #forgetPassword, #backToLogin {
        color: #0d6efd;
        cursor: pointer;
    }

        #forgetPassword:hover, #backToLogin:hover {
            text-decoration: underline;
        }

</style>
<section class="container vh-100 d-flex justify-content-center align-items-center">
    <div class="form-container" id="frmLogin">
        <h3 class="fw-bold mb-4 text-center">Login</h3>
        <form >
            <div class="mb-3">
                <input type="email" class="form-control" placeholder="Enter Email Address" id="email" aria-describedby="emailHelp" required>
            </div>
            <div class="mb-3">
                <input type="password" class="form-control" placeholder="Enter Your Password" id="password" required>
            </div>
            <div class="mb-3 text-end">
                <small id="forgetPassword" >Forgot Password?</small>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
<div class="form-container d-none" id="frmResetPassword">
        <h3 class="fw-bold mb-4 text-center">Reset Password</h3>
        <form >
            <p>Enter your email address below and we'll send you a link to reset your password.</p>

            <div class="mb-3">
                <input type="email" class="form-control" placeholder="Enter Email Address" id="email" aria-describedby="emailHelp" required>
            </div>
            <div class="mb-3 text-end">
                <small id="backToLogin">Back to Login?</small>
            </div>
         
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</section>
